<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iniciofondo"
    tools:context=".workers.fragmentos.perfil">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="397dp"
        android:layout_height="593dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="168dp"

                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:allowClickWhenDisabled="false"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:src="@drawable/_657310123341"
                app:shapeAppearanceOverlay="@style/Circular"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/uploadButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="100dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_upload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.567"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="103dp"
            app:cardBackgroundColor="#220AB5CC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Nombres y apellidos del alumno"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textCodigoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C칩digo"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#220A9ECC"
            android:drawableLeft="@drawable/baseline_mark_email_read_24"
            android:drawablePadding="8dp"
            android:text="Configuraci칩n de Cuenta"
            android:textSize="18sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btnStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#220A9ECC"
            android:drawableLeft="@drawable/baseline_how_to_reg_24"
            android:drawablePadding="8dp"
            android:text="Establecer Estado"
            android:textSize="18sp"
            app:cornerRadius="0dp" />


        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#220A9ECC"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="8dp"
            android:text="Cambiar contrase침a"
            android:textSize="18sp"
            app:cornerRadius="0dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#5240CED3"
            android:text="Cerrar Sesi칩n"
            android:textSize="16sp"
            app:cornerRadius="0dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
