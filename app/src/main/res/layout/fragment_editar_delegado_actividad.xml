<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iniciofondo"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- TextView para el nombre de la actividad, centrado horizontalmente -->
    <TextView
        android:id="@+id/nombreActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="NombreActividad"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- FrameLayout para la imagen, centrado horizontalmente -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- CircularImageView ajustado para que sea cuadrado y con márgenes automáticos -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/_657310123341"
            app:civ_border_color="#100F0F"
            app:civ_border_width="2dp" />
    </FrameLayout>

    <!-- CardView para la descripción, centrado horizontalmente -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="16dp"
            android:text="pepitosuarez"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- Botón de añadir, alineado al inicio -->
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="añadir" />

    <!-- RecyclerView para eventos, con altura flexible y sin nestedScrolling -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDeEventos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="16dp" />

</LinearLayout>

